---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
---
<Layout title="Melong">
	<main>
		<div class="background">
			<div class="left"></div>
			<div class="right"></div>
		</div>
		<div class="gologin">
			<h1>MELONG</h1>
			<img src="melon.png" alt="">
			<a href="/login">JOUER</a>
		</div>
	</main>
	<Footer></Footer>
</Layout>
<style>
	main{
		display: flex;
		flex-direction: column;
		position: relative;
		justify-content: center;
		align-items: center;
	}
	.background{
		display: flex;
		flex-direction: row;
		width: 100%;
		height: 100vh;
		position: relative;
	}
	.left{
		background-color: #5B8E7D;
		width: 50%;
		height: 100vh;
		position: absolute;
		left: 0;	
	}
	.right{
		background-color: #8CB369;
		width: 50%;
		height: 100vh;
		position: absolute;
		right: 0;	
	}
	main .gologin{
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		width: 500px;
		height: 550px;
		position: absolute;
	}
	main .gologin img{
		width: 300px;
		height: 300px;
	}
	main .gologin a{
		display: flex;
		justify-content: center;
		align-items: center;
		width: 200px;
		height: 50px;
		background-color: #FE9433;
		border-radius: 10px;
		border: none;
		font-weight: 700;
		color: white;
		font-size: 20px;
		cursor: pointer;
		text-decoration: none;
		&:hover{
			background-color: #ff7f07;
		}
	}
	main .gologin h1{
		font-size: 6rem;
		color: white;
		font-family: 'Wishcar Moundy', sans-serif;
		letter-spacing: 15px;
	}
</style>